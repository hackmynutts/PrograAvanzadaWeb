@model IEnumerable<Persona>
@{
    ViewData["Title"] = "Personas";
}
<h1>Personas</h1>
<p><a asp-action="Create" class="btn btn-primary">Crear nueva</a></p>
<table class="table">
    <thead>
        <tr><th>Nombre</th><th>Apellido</th><th>Email</th><th>Teléfono</th><th></th></tr>
    </thead>
    <tbody>
        @foreach (var p in Model)
        {
            <tr>
                <td>@p.Nombre</td>
                <td>@p.Apellido</td>
                <td>@p.Email</td>
                <td>@p.Telefono</td>
                <td>
                    <a asp-action="Details" asp-route-id="@p.Id">Detalles</a> |
                    <a asp-action="Edit" asp-route-id="@p.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@p.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
